package jp.springbook.springsample.data.user;

import jp.springbook.springroosample.mydata.ApplicationConversionServiceFactoryBean;
import jp.springbook.springroosample.mydata.SampleData;
import org.springframework.beans.factory.annotation.Configurable;
import org.springframework.core.convert.converter.Converter;
import org.springframework.format.FormatterRegistry;

privileged aspect ApplicationConversionServiceFactoryBean_Roo_ConversionService {
    
    declare @type: ApplicationConversionServiceFactoryBean: @Configurable;
    
    public Converter<SampleData, String> ApplicationConversionServiceFactoryBean.getSampleDataToStringConverter() {
        return new org.springframework.core.convert.converter.Converter<jp.springbook.springroosample.mydata.SampleData, java.lang.String>() {
            public String convert(SampleData sampleData) {
                return new StringBuilder().append(sampleData.getName()).append(' ').append(sampleData.getMail()).append(' ').append(sampleData.getAge()).append(' ').append(sampleData.getMemo()).toString();
            }
        };
    }
    
    public Converter<Long, SampleData> ApplicationConversionServiceFactoryBean.getIdToSampleDataConverter() {
        return new org.springframework.core.convert.converter.Converter<java.lang.Long, jp.springbook.springroosample.mydata.SampleData>() {
            public jp.springbook.springroosample.mydata.SampleData convert(java.lang.Long id) {
                return SampleData.findSampleData(id);
            }
        };
    }
    
    public Converter<String, SampleData> ApplicationConversionServiceFactoryBean.getStringToSampleDataConverter() {
        return new org.springframework.core.convert.converter.Converter<java.lang.String, jp.springbook.springroosample.mydata.SampleData>() {
            public jp.springbook.springroosample.mydata.SampleData convert(String id) {
                return getObject().convert(getObject().convert(id, Long.class), SampleData.class);
            }
        };
    }
    
    public void ApplicationConversionServiceFactoryBean.installLabelConverters(FormatterRegistry registry) {
        registry.addConverter(getSampleDataToStringConverter());
        registry.addConverter(getIdToSampleDataConverter());
        registry.addConverter(getStringToSampleDataConverter());
    }
    
    public void ApplicationConversionServiceFactoryBean.afterPropertiesSet() {
        super.afterPropertiesSet();
        installLabelConverters(getObject());
    }
    
}
